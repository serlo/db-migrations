{
  "name": "@serlo/server-migrate",
  "version": "0.2.0-staging.1",
  "private": true,
  "license": "Apache-2.0",
  "type": "module",
  "author": "Serlo Education e.V.",
  "scripts": {
    "_prettier": "prettier .",
    "_build": "ts-node --experimental-specifier-resolution=node scripts/build",
    "build": "BUILD_OUTDIR=migrations yarn _build",
    "build:cache": "BUILD_OUTDIR=dist yarn _build src/*ts",
    "docker:build": "docker build -t db-migrations-local-build:latest .",
    "docker:rm": "docker image rm db-migrations-local-build",
    "docker:run": "docker run --env DATABASE=mysql://root:secret@host.docker.internal:3306/serlo --add-host=host.docker.internal:host-gateway --name db-migrations-from-local-build db-migrations-local-build",
    "docker:stop": "docker stop db-migrations-from-local-build && docker container rm db-migrations-from-local-build",
    "format": "yarn format:prettier",
    "format:prettier": "yarn _prettier --write",
    "lint": "npm-run-all --parallel \"lint:*\"",
    "lint:prettier": "yarn _prettier --check",
    "lint:tsc": "tsc --noEmit --project tsconfig.json",
    "migrate:docker": "docker compose run --build --rm server-migrate",
    "migrate:run": "scripts/run_migrations.sh",
    "migrate:ts": "npm-run-all build:cache migrate:up",
    "migrate:up": "DATABASE=mysql://root:secret@localhost:3306/serlo yarn db-migrate -m dist up",
    "mysql": "docker compose exec mysql serlo-mysql",
    "mysql:delete-last-migration": "yarn mysql --execute 'DELETE FROM migrations ORDER BY id DESC LIMIT 1'",
    "mysql:delete-all-migrations": "yarn mysql --execute 'DELETE FROM migrations'",
    "mysql:import-anonymous-data": "ts-node --experimental-specifier-resolution=node scripts/mysql/mysql-import-anonymous-data",
    "mysql:list-migrations": "yarn mysql --execute 'SELECT * FROM migrations'",
    "mysql:rollback": "docker compose exec mysql sh -c \"pv /docker-entrypoint-initdb.d/001-init.sql | serlo-mysql\"",
    "new": "./scripts/touch_file.sh",
    "push-image": "ts-node --experimental-specifier-resolution=node scripts/push-image",
    "start": "yarn start:docker",
    "start:docker": "docker compose up mysql --detach",
    "stop": "yarn stop:docker",
    "stop:docker": "docker compose down",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "dependencies": {
    "db-migrate": "^0.11.13",
    "db-migrate-mysql": "^2.2.0"
  },
  "devDependencies": {
    "@edtr-io/core": "^2.0.0",
    "@edtr-io/plugin-text": "^3.0.2",
    "@serlo/markdown": "Entkenntnis/tmp-serlo-markdown",
    "@types/jest": "^29.5.3",
    "@types/node": "^18.17.3",
    "@types/ramda": "^0.29.3",
    "@types/react": "^18.2.18",
    "@types/semver": "^7.3.13",
    "@types/uuid": "^9.0.2",
    "esbuild": "^0.18.19",
    "fp-ts": "^2.16.1",
    "htmlparser2": "^9.0.0",
    "io-ts": "^2.2.20",
    "jest": "^29.6.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.1",
    "ramda": "^0.29.0",
    "react": "^18.2.0",
    "semver": "^7.5.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.7.0",
    "tslib": "^2.6.1",
    "typescript": "^5.1.6",
    "uuid": "^9.0.0"
  },
  "packageManager": "yarn@3.6.1",
  "engines": {
    "node": "^18.0.0"
  },
  "workspaces": [
    "src/utils/*"
  ]
}
